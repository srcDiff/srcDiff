{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-clang",
      "displayName": "Windows (Clang)",
      "description": "Default build options for Windows",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "inherits": ["clang", "vcpkg"],
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "windows-with-java"
      }
    },
    {
      "name": "clang",
      "displayName": "Clang",
      "description": "Default options for the Clang compiler",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "ubuntu-release",
      "displayName": "Ubuntu Release",
      "description": "Default build options for Ubuntu release",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "inherits" : ["gcc-release"]
    }, 
    {
      "name": "gcc-release",
      "inherits": ["gcc"],
      "displayName": "GCC Release",
      "description": "Default build options for GCC release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gcc",
      "inherits": ["linux"],
      "displayName": "GCC",
      "description": "Default build options for GCC",
      "toolchainFile": "toolchain-gcc.cmake"
    },
    {
      "name": "linux",
      "description": "Default build options for Linux",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-Wall -Wextra -pedantic",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic"
        
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    }
  ] 
}
