#!/bin/bash

#tar xf old.tar.bz2
#tar xf new.tar.bz2
HERE=$(pwd)
cd old
find . -name "*.h" -o -name "*.c" -o -name "*.cc" > files 
cd ${HERE}
cd new
cat ${HERE}/old/files | gxargs -I% bash -c "[[ -e % ]] && echo % > ../files"
cd ${HERE}
