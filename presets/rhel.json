{
  "version": 8,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },

  "include": [
    "base.json"
  ],

  "configurePresets": [
    {
      "name": "ci-rhel",
      "inherits": ["ci-gcc", "subdirectory-build"],
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "displayName": "GCC Release",
      "description": "Default build options for GCC release",
      "generator": "Ninja",
      "cacheVariables": {
          "CPACK_OUTPUT_FILE_PREFIX": "dist"
      }

    }
  ],

  "buildPresets" : [
    {
      "name": "ci-rhel",
      "displayName": "Red Hat",
      "description": "Build for Red Hat Family",
      "condition": {
        "type": "allOf",
        "conditions": [
          { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
          { "type": "inList", "string": "$env{WORKFLOW}", "list": ["fedora", ""] }
        ]
      },
      "configurePreset": "ci-rhel",
      "configuration": "Release"
    },
    {
      "name": "ci-install-package-rhel",
      "description": "Install an rpm package",
      "configurePreset": "ci-rhel",
      "inherits": "ci-install-package"
    },
    {
      "name": "ci-test-unit-rhel",
      "inherits": ["ci-test-unit", "ci-rhel"]
    },
    {
      "name": "ci-test-suite-rhel",
      "inherits": ["ci-test-suite", "ci-rhel"]
    }
  ],

  "packagePresets": [
    {
      "name": "ci-rhel",
      "configurePreset": "ci-rhel",
      "generators": [ "RPM", "TGZ", "TBZ2" ],
      "inherits": ["ci-base"]
    }
  ],

  "testPresets": [
  ],

  "workflowPresets": [
    {
      "name": "ci-rhel",
      "steps": [
        { "type": "configure", "name": "ci-rhel" },
        { "type": "build",     "name": "ci-rhel" },
        { "type": "package",   "name": "ci-rhel" },
        { "type": "build",     "name": "ci-install-package-rhel" },
        { "type": "build",     "name": "ci-test-unit-rhel" },
        { "type": "build",     "name": "ci-test-suite-rhel" }
      ]
    }
  ]
}
