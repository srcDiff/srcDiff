{
  "version": 8,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },

  "include": [
    "base.json"
  ],

  "configurePresets": [
    {
      "name": "ci-macos",
      "inherits": ["ci-clang", "subdirectory-build"],
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "displayName": "macOS Release",
      "description": "Default build options for macOS release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15",
        "CPACK_GENERATOR": "productbuild;TGZ;TBZ2",
        "CPACK_OUTPUT_FILE_PREFIX": "dist"
      }
    }
  ],

  "buildPresets" : [
    {
      "name": "ci-macos",
      "displayName": "macOS",
      "description": "Build for macOS",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "configurePreset": "ci-macos",
      "configuration": "Release"
    },
    {
      "name": "ci-install-package-macos",
      "inherits": [ "ci-macos", "ci-install-package" ]
    },
    {
      "name": "ci-test-cli-macos",
      "inherits": ["ci-test-cli", "ci-macos"]
    },
    {
      "name": "ci-test-unit-macos",
      "inherits": ["ci-test-unit", "ci-macos"]
    },
    {
      "name": "ci-test-delta-macos",
      "inherits": ["ci-test-delta", "ci-macos"]
    }  
  ],

  "packagePresets": [
    {
      "name": "ci-macos",
      "inherits": ["ci-base"],
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "configurePreset": "ci-macos",
      "generators": [ "productbuild", "TGZ", "TBZ2" ]
    }
  ],

  "testPresets": [
  ],

  "workflowPresets": [
    {
      "name": "ci-macos",
      "steps": [
        { "type": "configure", "name": "ci-macos" },
        { "type": "build",     "name": "ci-macos" },    
        { "type": "package",   "name": "ci-macos" },
        { "type": "build",     "name": "ci-install-package-macos" },
        { "type": "build",     "name": "ci-test-cli-macos"        },
        { "type": "build",     "name": "ci-test-unit-macos"       },
        { "type": "build",     "name": "ci-test-delta-macos"      }
      ]
    }
  ]
}
