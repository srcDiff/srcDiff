{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_USE_VCPKG": true
      }
    },
    {
      "name": "clang",
      "displayName": "Clang",
      "description": "Default options for the Clang compiler",
      "toolchainFile": "${sourceDir}/toolchains/toolchain-clang.cmake",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "ci-clang",
      "inherits": ["clang"],
      "displayName": "Clang Release",
      "description": "Default build options for Clang release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release" 
      }
    },
    {
      "name": "gcc",
      "displayName": "GCC",
      "description": "Default build options for GCC",
      "toolchainFile": "${sourceDir}/toolchains/toolchain-gcc.cmake",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-Wall -Wextra -pedantic",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic"
      }
    },
    {
      "name": "ci-gcc",
      "inherits": ["gcc"],
      "displayName": "GCC Release",
      "description": "Default build options for GCC release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
