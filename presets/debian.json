{
  "version": 8,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },

  "include": [
    "base.json"
  ],

  "configurePresets": [
    {
      "name": "ci-debian",
      "inherits": ["ci-gcc", "subdirectory-build"],
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "displayName": "Debian Release",
      "description": "Default build options for Debian release",
      "generator": "Ninja"
    }
  ],

  "buildPresets" : [
    {
      "name": "ci-debian",
      "displayName": "Debian",
      "description": "Build for Debian Family",
      "condition": {
        "type": "allOf",
        "conditions": [
          { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
          { "type": "inList", "string": "$env{WORKFLOW}", "list": ["ubuntu", ""] }
        ]
      },
      "configurePreset": "ci-debian",
      "configuration": "Release"
    },
    {
      "name": "ci-install-package-debian",
      "inherits": [ "ci-debian", "ci-install-package" ]
    },
    {
      "name": "ci-test-unit-debian",
      "inherits": ["ci-test-unit", "ci-debian"]
    },
    {
      "name": "ci-test-suite-debian",
      "inherits": ["ci-test-suite", "ci-debian"]
    }
  ],

  "packagePresets": [
    {
      "name": "ci-debian",
      "inherits": ["ci-base"],
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-debian",
      "generators": [ "DEB", "TGZ", "TBZ2" ]
    }
  ],

  "testPresets": [
  ],

  "workflowPresets": [
    {
      "name": "ci-debian",
      "steps": [
        { "type": "configure", "name": "ci-debian" },
        { "type": "build",     "name": "ci-debian" },
        { "type": "package",   "name": "ci-debian" },
        { "type": "build",     "name": "ci-install-package-debian" },
        { "type": "build",     "name": "ci-test-suite-debian" },
        { "type": "build",     "name": "ci-test-unit-debian" }
      ]
    }
  ]
}
