{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "include": [
    "base.json"
  ],
  "configurePresets": [
    {
      "name": "ci-windows",
      "displayName": "Windows (with Clang, Ninja, and vcpkg)",
      "description": "Default build options for Windows",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "inherits": ["ci-clang", "subdirectory-build", "vcpkg"],
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-DWIN32 -D_MSC_BUILD",
        "CMAKE_C_FLAGS": "-DWIN32 -D_MSC_BUILD"
      }
    }
  ],

  "buildPresets" : [
    {
      "name": "ci-windows",
      "displayName": "Windows",
      "description": "Build for Windows",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "configurePreset": "ci-windows",
      "configuration": "Release"
    },
    {
      "name": "ci-install-package-windows",
      "description": "Install a Windows package",
      "configurePreset": "ci-windows",
      "inherits": "ci-install-package"
    },
    {
      "name": "ci-test-unit-windows",
      "inherits": ["ci-test-unit", "ci-windows"]
    },
    {
      "name": "ci-test-suite-windows",
      "inherits": ["ci-test-suite", "ci-windows"]
    }
  ],

  "packagePresets": [
    {
      "name": "ci-windows",
      "configurePreset": "ci-windows",
      "generators": ["WIX", "ZIP"],
      "inherits": ["ci-base"]
    }
  ],
  
  "testPresets": [

  ],
  "workflowPresets": [
    {
      "name": "ci-windows",
      "steps": [
        { "type": "configure", "name": "ci-windows" },
        { "type": "build",     "name": "ci-windows" },
        { "type": "package",   "name": "ci-windows" },
        { "type": "build",     "name": "ci-install-package-windows" },
        { "type": "build",     "name": "ci-test-suite-windows" }
      ]
    }
  ]
}
